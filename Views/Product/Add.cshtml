@model BanHang.DTO.Product.ProductViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Thêm sản phẩm";
}

<div class="container mt-4">
    <h1>Thêm sản phẩm</h1>

    <form asp-action="Add" enctype="multipart/form-data" class="mt-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                Thông tin cơ bản
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="CategoryId" class="form-label"></label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                                <option value="">-- Chọn danh mục --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                Hình ảnh sản phẩm
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="ImageFile" class="form-label"></label>
                            <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                            <small class="text-muted">Hình ảnh chính hiển thị sản phẩm</small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="AdditionalImages" class="form-label"></label>
                            <input type="file" asp-for="AdditionalImages" multiple class="form-control"
                                accept="image/*" />
                            <small class="text-muted">Có thể chọn nhiều hình ảnh (tối đa 5 hình)</small>
                        </div>
                    </div>
                </div>
                <div class="image-preview mt-3" id="imagePreview">
                    <!-- Preview will be shown here -->
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg px-5">
                <i class="bi bi-save"></i> Thêm sản phẩm
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg ms-2">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Image preview functionality
        document.querySelector('input[name="ImageFile"]').addEventListener('change', function (e) {
            const preview = document.getElementById('imagePreview');
            preview.innerHTML = '';

            if (this.files && this.files[0]) {
                const mainPreviewDiv = document.createElement('div');
                mainPreviewDiv.className = 'mb-3';

                const label = document.createElement('p');
                label.textContent = 'Hình ảnh chính:';
                label.className = 'fw-bold';

                const img = document.createElement('img');
                img.className = 'img-thumbnail';
                img.style.maxHeight = '200px';
                img.src = URL.createObjectURL(this.files[0]);

                mainPreviewDiv.appendChild(label);
                mainPreviewDiv.appendChild(img);
                preview.appendChild(mainPreviewDiv);
            }
        });

        document.querySelector('input[id="AdditionalImages"]').addEventListener('change', function (e) {
            const preview = document.getElementById('imagePreview');
            const additionalPreviewDiv = document.createElement('div');
            additionalPreviewDiv.className = 'mt-3';

            if (this.files && this.files.length > 0) {
                const label = document.createElement('p');
                label.textContent = 'Hình ảnh bổ sung:';
                label.className = 'fw-bold';
                additionalPreviewDiv.appendChild(label);

                const imagesContainer = document.createElement('div');
                imagesContainer.className = 'd-flex flex-wrap gap-2';

                Array.from(this.files).forEach(file => {
                    const imgContainer = document.createElement('div');

                    const img = document.createElement('img');
                    img.className = 'img-thumbnail';
                    img.style.maxHeight = '150px';
                    img.style.maxWidth = '150px';
                    img.src = URL.createObjectURL(file);

                    imgContainer.appendChild(img);
                    imagesContainer.appendChild(imgContainer);
                });

                additionalPreviewDiv.appendChild(imagesContainer);
                preview.appendChild(additionalPreviewDiv);
            }
        });
    </script>
}