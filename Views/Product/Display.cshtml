@model BanHang.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2 class="mb-4">Product Details</h2>

<div class="card shadow p-4">
    <div class="row">
        <!-- Hình ảnh sản phẩm -->
        <div class="col-md-5">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="text-center">
                    <img src="@Model.ImageUrl" alt="Main Product Image" class="img-fluid rounded" style="max-width: 100%; height: auto; border-radius: 10px;" />
                </div>
            }

            @if (Model.ImageUrl != null && Model.ImageUrl.Any())
            {
                <div class="mt-3">
                    <h5>Additional Images:</h5>
                    <div class="d-flex flex-wrap">
                        @foreach (var image in Model.ImageUrl)
                        {
                            <img src="@image" alt="Additional Image" class="img-thumbnail m-2" style="max-width: 120px; height: auto; border-radius: 5px;" />
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-md-7">
            <h4><strong>Name:</strong> @Model.Name</h4>
            <h5><strong>Price:</strong> @Model.Price.ToString("C")</h5>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Category:</strong> @Model.CategoryId</p>

            <!-- Nút điều hướng -->
            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
