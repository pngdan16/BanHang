@{
  ViewData["Title"] = "Product Detail";
}
@model BanHang.Models.Product

<div class="container mt-4">
  <h2 class="text-center mb-4">Product Detail</h2>
  <div class="row">
    <div class="col-md-6">
      <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow">
    </div>
    <div class="col-md-6">
      <h3>@Model.Name</h3>
      <p class="text-muted">Price: @Model.Price</p>
      <p>@Model.Description</p>
      <a href="#" class="btn btn-primary">Add to Cart</a>
    </div>
  </div>
</div>